---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const routeSlug = (entry: { slug?: string; id: string }) =>
  entry.slug ?? entry.id.replace(/\.md$/, '');

export async function getStaticPaths() {
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);
  const posts = allPosts.filter((post) => post.data.lang === 'en');

  return posts.map((post) => {
    const translation = allPosts.find(
      (candidate) => candidate.data.lang === 'fi' && candidate.data.translationKey === post.data.translationKey
    );
    const postSlug = post.slug ?? post.id.replace(/\.md$/, '');
    const fiSlug = translation ? translation.slug ?? translation.id.replace(/\.md$/, '') : null;

    return {
      params: { slug: postSlug },
      props: {
        post,
        fiSlug
      }
    };
  });
}

const { post, fiSlug } = Astro.props;
const { Content } = await render(post);
const dateFormat = new Intl.DateTimeFormat('en-US', { dateStyle: 'long' });
const publishedIso = post.data.pubDate.toISOString();
const modifiedIso = post.data.updatedDate ? post.data.updatedDate.toISOString() : publishedIso;
---

<BaseLayout
  title={`${post.data.title} | Macro Monk Blog`}
  description={post.data.description}
  lang="en"
  switchToEn={`/blog/${routeSlug(post)}/`}
  switchToFi={fiSlug ? `/blog/fi/${fiSlug}/` : '/blog/fi/'}
  homeUrl="/"
  blogUrl="/blog/"
  canonicalPath={`/blog/${routeSlug(post)}/`}
  alternateEnPath={`/blog/${routeSlug(post)}/`}
  alternateFiPath={fiSlug ? `/blog/fi/${fiSlug}/` : '/blog/fi/'}
  ogType="article"
  ogImagePath={post.data.featuredImage ?? '/macro-monk.png'}
  publishedTime={publishedIso}
  modifiedTime={modifiedIso}
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'BlogPosting',
    headline: post.data.title,
    description: post.data.description,
    datePublished: publishedIso,
    dateModified: modifiedIso,
    inLanguage: 'en',
    url: `https://macromonk.fi/blog/${routeSlug(post)}/`,
    author: {
      '@type': 'Organization',
      name: 'Macro Monk'
    },
    publisher: {
      '@type': 'Organization',
      name: 'Macro Monk'
    }
  }}
>
  <article class="post-article">
    <p class="eyebrow">Macro Monk Blog</p>
    <h1>{post.data.title}</h1>
    <p class="meta">
      Published {dateFormat.format(post.data.pubDate)}
      {post.data.updatedDate ? ` â€¢ Updated ${dateFormat.format(post.data.updatedDate)}` : ''}
    </p>
    {post.data.featuredImage && (
      <img
        class="post-featured-image"
        src={post.data.featuredImage}
        alt={post.data.featuredImageAlt ?? post.data.title}
      />
    )}
    <div class="post-content">
      <Content />
    </div>
  </article>
</BaseLayout>
