---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);
  const posts = allPosts.filter((post) => post.data.lang === 'fi');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: {
      post,
      enSlug:
        allPosts.find(
          (candidate) =>
            candidate.data.lang === 'en' && candidate.data.translationKey === post.data.translationKey
        )?.slug ?? null
    }
  }));
}

const { post, enSlug } = Astro.props;
const { Content } = await render(post);
const dateFormat = new Intl.DateTimeFormat('fi-FI', { dateStyle: 'long' });
const publishedIso = post.data.pubDate.toISOString();
const modifiedIso = post.data.updatedDate ? post.data.updatedDate.toISOString() : publishedIso;
---

<BaseLayout
  title={`${post.data.title} | Macro Monk Blogi`}
  description={post.data.description}
  lang="fi"
  switchToEn={enSlug ? `/blog/${enSlug}/` : '/blog/'}
  switchToFi={`/blog/fi/${post.slug}/`}
  homeUrl="/fi/"
  blogUrl="/blog/fi/"
  canonicalPath={`/blog/fi/${post.slug}/`}
  alternateEnPath={enSlug ? `/blog/${enSlug}/` : '/blog/'}
  alternateFiPath={`/blog/fi/${post.slug}/`}
  ogType="article"
  ogImagePath={post.data.featuredImage ?? '/macro-monk.png'}
  publishedTime={publishedIso}
  modifiedTime={modifiedIso}
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'BlogPosting',
    headline: post.data.title,
    description: post.data.description,
    datePublished: publishedIso,
    dateModified: modifiedIso,
    inLanguage: 'fi',
    url: `https://macromonk.fi/blog/fi/${post.slug}/`,
    author: {
      '@type': 'Organization',
      name: 'Macro Monk'
    },
    publisher: {
      '@type': 'Organization',
      name: 'Macro Monk'
    }
  }}
>
  <article class="post-article">
    <p class="eyebrow">Macro Monk Blogi</p>
    <h1>{post.data.title}</h1>
    <p class="meta">
      Julkaistu {dateFormat.format(post.data.pubDate)}
      {post.data.updatedDate ? ` • Päivitetty ${dateFormat.format(post.data.updatedDate)}` : ''}
    </p>
    {post.data.featuredImage && (
      <img
        class="post-featured-image"
        src={post.data.featuredImage}
        alt={post.data.featuredImageAlt ?? post.data.title}
      />
    )}
    <div class="post-content">
      <Content />
    </div>
  </article>
</BaseLayout>
