---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';

interface Props {
  title: string;
  description: string;
  lang?: 'en' | 'fi';
  switchToEn?: string;
  switchToFi?: string;
  homeUrl?: string;
  blogUrl?: string;
  canonicalPath?: string;
  alternateEnPath?: string;
  alternateFiPath?: string;
  ogType?: 'website' | 'article';
  ogImagePath?: string;
  publishedTime?: string;
  modifiedTime?: string;
  structuredData?: Record<string, unknown> | Array<Record<string, unknown>>;
}

const {
  title,
  description,
  lang = 'en',
  switchToEn = '/',
  switchToFi = '/fi/',
  homeUrl,
  blogUrl,
  canonicalPath,
  alternateEnPath = '/',
  alternateFiPath = '/fi/',
  ogType = 'website',
  ogImagePath = '/macro-monk.png',
  publishedTime,
  modifiedTime,
  structuredData
} = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
const isFi = lang === 'fi';
const resolvedHomeUrl = homeUrl ?? (isFi ? `${baseUrl}fi/` : `${baseUrl}`);
const resolvedBlogUrl = blogUrl ?? (isFi ? `${baseUrl}blog/fi/` : `${baseUrl}blog/`);
const homeLabel = isFi ? 'Etusivu' : 'Home';
const blogLabel = 'Blog';
const openAppLabel = isFi ? 'Avaa sovellus' : 'Open app';
const siteOrigin = (Astro.site?.toString() ?? 'https://macromonk.fi').replace(/\/$/, '');
const resolvedCanonicalPath = canonicalPath ?? Astro.url.pathname;
const canonicalUrl = new URL(resolvedCanonicalPath, `${siteOrigin}/`).toString();
const alternateEnUrl = new URL(alternateEnPath, `${siteOrigin}/`).toString();
const alternateFiUrl = new URL(alternateFiPath, `${siteOrigin}/`).toString();
const ogImageUrl = new URL(ogImagePath, `${siteOrigin}/`).toString();
const structuredDataItems = structuredData ? (Array.isArray(structuredData) ? structuredData : [structuredData]) : [];
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index,follow,max-image-preview:large" />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang="en" href={alternateEnUrl} />
    <link rel="alternate" hreflang="fi" href={alternateFiUrl} />
    <link rel="alternate" hreflang="x-default" href={alternateEnUrl} />
    <meta property="og:locale" content={lang === 'fi' ? 'fi_FI' : 'en_US'} />
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Macro Monk" />
    <meta property="og:image" content={ogImageUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    <link rel="icon" type="image/png" sizes="32x32" href={`${baseUrl}icons/favicon-32x32.png`} />
    <link rel="icon" type="image/png" sizes="16x16" href={`${baseUrl}icons/favicon-16x16.png`} />
    <link rel="apple-touch-icon" sizes="180x180" href={`${baseUrl}icons/apple-touch-icon.png`} />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}macro-monk-favicon.svg`} />
    <title>{title}</title>
    {
      structuredDataItems.map((item) => (
        <script type="application/ld+json" set:html={JSON.stringify(item)} />
      ))
    }
  </head>
  <body>
    <div class="page-shell">
      <div class="backdrop" aria-hidden="true"></div>
      <header class="topbar container">
        <div class="brand-wrap">
          <a class="brand" href={resolvedHomeUrl}>
            <img class="brand-image" src={`${baseUrl}macro-monk-logo-sharp.png`} alt="Macro Monk" />
          </a>
          <p class="brand-slogan">For lifters who already know their shit ðŸ˜„</p>
        </div>
        <nav class="top-actions" aria-label="Primary">
          <div class="lang-switch" role="group" aria-label="Language selector">
            <a class:list={['lang-btn', { active: lang === 'en' }]} href={switchToEn}>EN</a>
            <a class:list={['lang-btn', { active: lang === 'fi' }]} href={switchToFi}>FI</a>
          </div>
          <a class="button ghost" href={resolvedHomeUrl}>{homeLabel}</a>
          <a class="button ghost" href={resolvedBlogUrl}>{blogLabel}</a>
          <a class="button primary" href="https://app.macromonk.fi/" target="_blank" rel="noreferrer">
            {openAppLabel}
          </a>
        </nav>
      </header>
      <main class="container">
        <slot />
      </main>
      <footer class="container footer">
        <p>Â© 2026 Macro Monk. All rights reserved.</p>
      </footer>
    </div>
    <Analytics />
  </body>
</html>
